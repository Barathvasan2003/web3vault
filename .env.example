# Environment Variables for WebVault3

# ============================================
# Blockchain Configuration
# ============================================
NEXT_PUBLIC_WS_PROVIDER=ws://127.0.0.1:9944
NEXT_PUBLIC_CHAIN_NAME=Development

# ============================================
# IPFS & Decentralized Storage
# ============================================
# Infura IPFS (Free tier)
NEXT_PUBLIC_IPFS_HOST=ipfs.infura.io
NEXT_PUBLIC_IPFS_PORT=5001
NEXT_PUBLIC_IPFS_PROTOCOL=https

# Crust Network (Optional - for production)
# CRUST_API_ENDPOINT=https://crust.api/
# CRUST_AUTH_TOKEN=your_crust_token

# ============================================
# AI & OCR Services
# ============================================
# Google Gemini AI for medical prescription analysis (REQUIRED)
# Get your free API key: https://aistudio.google.com/app/apikey
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API for medical text understanding (Optional)
OPENAI_API_KEY=your_openai_api_key_here

# Google Cloud Vision (Optional - better OCR)
# GOOGLE_VISION_API_KEY=your_google_vision_key
# GOOGLE_VISION_PROJECT_ID=your_project_id

# ============================================
# Database (Metadata Only)
# ============================================
# Supabase (Free tier)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
DATABASE_URL=your_database_connection_string

# ============================================
# Security & Encryption
# ============================================
# JWT Secret for access tokens
JWT_SECRET=your_very_secure_random_secret_key_here_minimum_32_chars

# Encryption salt (generate random)
ENCRYPTION_SALT=random_salt_for_key_derivation

# ============================================
# Application Settings
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=WebVault3

# ============================================
# Feature Flags
# ============================================
NEXT_PUBLIC_ENABLE_AI_OCR=true
NEXT_PUBLIC_ENABLE_MEDICAL_NLP=true
NEXT_PUBLIC_ENABLE_SHARING=true
NEXT_PUBLIC_ENABLE_EMERGENCY_CARD=true

# ============================================
# Optional Services
# ============================================
# Redis for caching (Upstash free tier)
# REDIS_URL=your_redis_url
# REDIS_TOKEN=your_redis_token

# Firebase Cloud Messaging for notifications
# FIREBASE_API_KEY=your_firebase_key
# FIREBASE_PROJECT_ID=your_project_id

# Sentry for error tracking (free tier)
# SENTRY_DSN=your_sentry_dsn

# ============================================
# Development Only
# ============================================
NODE_ENV=development
